#!/usr/local/bin/bash
TUMBLR_SITES="blog.jbryanscott.com"
BACKUP_DESTINATION="$HOME/tumblr-backups/`date -u '+%Y-%m-%d_%H-%M-%S'`"

echo "Starting tumblr-backup at `date -u `."
for site in $TUMBLR_SITES
do
    echo "Downloading $site..."

    wget \
     --directory-prefix="$BACKUP_DESTINATION"\
     --recursive \
     --adjust-extension \
     --html-extension \
     --convert-links \
     --restrict-file-names=unix \
     --span-hosts \
     --show-progress \
     --domains "$site, media.tumblr.com" \
         $site
done
echo "tumblr-backup has finished at `date -u`."
